{
  "name": "@pdfgenstudio/mcp",
  "version": "1.0.3",
  "description": "MCP (Model Context Protocol) server for PDF Gen Studio - Generate PDFs and images from templates, JSON, HTML, or URLs",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pdfgenstudio-mcp": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js --transport stdio",
    "start:http": "node dist/index.js --transport http --port 3100",
    "inspect": "npx fastmcp inspect src/index.ts",
    "test": "npx fastmcp dev src/index.ts",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build",
    "docker:build": "docker build -t mcp/pdfgenstudio:latest -t mcp/pdfgenstudio:1.0.3 .",
    "docker:push": "echo 'Docker MCP images are built by Docker Inc. Submit your repo to the MCP catalog.'",
    "docker:run": "docker run -i --rm -e PDFGENSTUDIO_API_KEY mcp/pdfgenstudio:latest"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "pdf",
    "pdf-generator",
    "pdfgenstudio",
    "ai",
    "claude",
    "openai",
    "llm",
    "fastmcp",
    "docker"
  ],
  "author": "Majid9287",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Majid9287/pdfgenstudio-mcp"
  },
  "homepage": "https://pdfgenstudio.com",
  "bugs": {
    "url": "https://github.com/Majid9287/pdfgenstudio-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "fastmcp": "^3.26.8",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "eslint": "^9.17.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}
